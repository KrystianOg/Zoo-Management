<UserControl x:Class="Zoo_Management.Controls.DefCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zoo_Management.Controls"
             mc:Ignorable="d">
    <CheckBox Width="18" Height="18" Cursor="Hand">
        <CheckBox.Resources>
            <!--Unchecked state-->
            <SolidColorBrush x:Key="MaterialDesignCheckBoxOff" Color="{StaticResource ColorDefaultWhite}"/>
            <!--Checked state-->
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="{StaticResource ColorApricot}"/>
        </CheckBox.Resources>
    </CheckBox>
</UserControl>
