<UserControl x:Class="Zoo_Management.Controls.Animal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Zoo_Management.Controls"
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="10 3"></Setter>
                <Setter Property="Foreground" Value="White"></Setter>
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="FontSize" Value="16"></Setter>
                
            </Style>
        </StackPanel.Resources>
        <TextBlock x:Name="Name" Text="Name"/>
        <TextBlock x:Name="Family" Text="Family"/>
        <TextBlock x:Name="Amount" Text="Amount"/>
        <TextBlock x:Name="Weight" Text="Weight"/>
        <TextBlock x:Name="TypeOfFood" Text="TypeOfFood"/>
        <TextBlock x:Name="AmountOfFood" Text="AmountOfFood"/>
        


    </StackPanel>
</UserControl>
